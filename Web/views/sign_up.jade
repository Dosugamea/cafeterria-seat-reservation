extends layout

block content
  if err_type !== undefined
    div.row.mt-3
      div.alert.alert-danger.w-100.alert-block.devise-bs.mx-2
        button(type="button" class="close" data-dismiss="alert") ×
        h5 エラーが発生したためアカウントを登録できませんでした
        case err_type
          when 1
            ul: li メールアドレスが正しくありません
          when 2
            ul: li フォームをすべて入力してください
          when 3
            ul: li 確認パスワードが一致しません
  div.row.mt-3
    div.col
      div.card
        div.card-header.bg-primary.text-white 新規会員登録
        div.card-body
          form(id="create_user",action="/sign_up",method="post")
            div.form-group
              label(for="account_mail") メールアドレス
              input(id="account_mail" name="account_mail" type="email" required).form-control
            div.form-group
              label(for="account_passwd") パスワード
              input(id="account_passwd" name="account_passwd" type="password" required).form-control
            div.form-group
              label(for="account_passwd_re") パスワード(確認)
              input(id="account_passwd_re" name="account_passwd_re" type="password" required).form-control
            input(type="submit",name="commit",value="同意して新規会員登録").btn.btn-success.w-100.mt-4
  div.row
    a(href="sign_in").mt-5.mx-auto.btn.btn-info ログインページへ
  div(class="mt-2")