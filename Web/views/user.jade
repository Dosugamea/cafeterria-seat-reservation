extends layout

block content
  div(class="row my-3")
    div(class="col-md-6 my-2")
      div(class="card h-100")
        div(class="d-flex flex-row justify-content-between")
          div(class="p-2 my-auto")
            i(class="fas fa-clock fa-5x")
          div(class="p-2")
            div(class="d-flex flex-column text-right")
              h2= reservedDate
              h3= reservedTime
              | 予約日
    div(class="col-md-6 my-2")
      div(class="card h-100")
        div(class="d-flex flex-row justify-content-between")
          div(class="p-2 my-auto")
            i(class="fas fa-drumstick-bite fa-5x")
          div(class="p-2")
            div(class="d-flex flex-column text-right")
              h1= orderCount
              | 席取り回数
  div(class="row")
    div(class="col-md-6 my-2")
      div(class="card h-100")
        div(class="card-header") 席取り関連
        div(class="card-body")
          div(class="list-group")
            a(class="list-group-item" href="/user/reserve") 席取り予約をする
            a(class="list-group-item" href="/user/reserve/code") 予約コード表示
            // a(class="list-group-item" href="/user/reserve/status") 予約状態
    div(class="col-md-6 my-2")
      div(class="card h-100")
        div(class="card-header") プロフィール関連
        div(class="card-body")
          div(class="list-group")
            a(class="list-group-item" href="/user/edit") パスワード変更
            a(class="list-group-item" href="/user/sign_out") ログアウト
  div(class="mt-2")